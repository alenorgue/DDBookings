<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title><%= accommodation.title %> - Detalles del alojamiento</title>
  <link rel="stylesheet" href="https://unpkg.com/@picocss/pico@2.0.6/css/pico.min.css">
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js"></script>
  <style>
    body {
      padding: 1rem;
    }
    .photos {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      margin-bottom: 2rem;
    }
    .photos img {
      width: 200px;
      height: auto;
      border-radius: 0.5rem;
    }
    #map {
      width: 100%;
      height: 400px;
      margin-top: 1rem;
    }
  </style>
</head>
<body>
  <main class="container">
    <h1><%= accommodation.title %></h1>

    <div><strong>Precio por noche:</strong> €<%= accommodation.pricePerNight %></div>
    <div><strong>Descripción:</strong> <%= accommodation.description %></div>
    <div><strong>Dirección:</strong> <%= accommodation.location.address %>, <%= accommodation.location.city %>, <%= accommodation.location.country %> - <%= accommodation.location.postalCode %></div>
    <div><strong>Metros cuadrados:</strong> <%= accommodation.squareMeters %> m²</div>
    <div><strong>Habitaciones:</strong> <%= accommodation.rooms %></div>
    <div><strong>Camas:</strong> <%= accommodation.beds %></div>
    <div><strong>Máximos huespedes:</strong> <%= accommodation.maxGuests %></div>
    <div><strong>Baños:</strong> <%= accommodation.bathrooms %></div>
    <div><strong>Tipo de propiedad:</strong> <%= accommodation.propertyType %></div>
    <div><strong>Se permiten mascotas:</strong> <%= accommodation.petsAllowed ? 'Sí' : 'No' %></div>
    <div><strong>Política de cancelación:</strong> <%= accommodation.cancellationPolicy %></div>
    <div><strong>Check-in:</strong> <%= accommodation.checkIn %> | <strong>Check-out:</strong> <%= accommodation.checkOut %></div>
    <div><strong>Reglas de la casa:</strong> <%= accommodation.houseRules || 'No especificadas' %></div>
    <div><strong>Servicios:</strong>
      <ul>
        <% accommodation.amenities.forEach(a => { %>
          <li><%= a %></li>
        <% }) %>
      </ul>
    </div>

    <h2>Fotos</h2>
    <div class="photos">
      <% if (accommodation.mainPhoto) { %>
        <img src="<%= accommodation.mainPhoto %>" alt="Foto principal">
      <% } %>
     <% accommodation.photos.forEach(photo => { %>
  <div>
    <img src="<%= photo.url %>" alt="<%= photo.label || 'Foto adicional' %>">
  </div>
<% }) %>
    </div>
<h3>Disponibilidad</h3>
<div id="calendar"></div>
    <h2>Ubicación en el mapa</h2>
    <div id="map"></div>
<h3>Realizar reserva</h3>
    <form id="bookingForm" method="POST" action="/bookings/">
      <input type="hidden" name="accommodationId" value="<%= accommodation.id %>">
      <input type="hidden" name="hostId" value="<%= accommodation.hostId %>">
      <label for="startDate">Fecha de entrada:</label>
      <input type="date" id="startDate" name="startDate" required>
      <label for="endDate">Fecha de salida:</label>
      <input type="date" id="endDate" name="endDate" required>
      <label for="guests">Huéspedes:</label>
      <input type="number" id="guests" name="guests" min="1" max="<%= accommodation.maxGuests %>" value="1" required>
      <button type="submit">Reservar</button>
      <div id="bookingMessage" style="margin-top:1em;color:red;"></div>
    </form>
    <script>
      const availableDates = JSON.parse('<%- JSON.stringify(availability) %>');
      function isRangeAvailable(start, end) {
      let current = new Date(start);
      const last = new Date(end);
      while (current <= last) {
        const iso = current.toISOString().slice(0,10);
        if (!availableDates.includes(iso)) return false;
        current.setDate(current.getDate() + 1);
      }
      return true;
      }
      document.getElementById('bookingForm').addEventListener('submit', function(e) {
      const start = document.getElementById('startDate').value;
      const end = document.getElementById('endDate').value;
      if (!start || !end || start > end) {
        document.getElementById('bookingMessage').textContent = 'Selecciona un rango de fechas válido.';
        e.preventDefault();
        return;
      }
      if (!isRangeAvailable(start, end)) {
        document.getElementById('bookingMessage').textContent = 'Fechas no disponibles, elige fechas marcadas como disponibles.';
        e.preventDefault();
      } else {
        document.getElementById('bookingMessage').textContent = '';
      }
      });
    </script>
  </main>
  <% if (typeof user !== 'undefined' && user && user.id === accommodation.hostId) { %>
      <a href="/accommodations/<%= accommodation.id %>/update" class="button">Editar este alojamiento</a>
    <% } %>
<% if (accommodation.location && accommodation.location.coordinates) { %>
  <script>
    function initMap() {
      const coords = JSON.parse('<%- JSON.stringify(accommodation.location.coordinates) %>');
      const map = new google.maps.Map(document.getElementById("map"), {
        center: coords,
        zoom: 15,
      });
      new google.maps.Marker({
        position: coords,
        map: map,
      });
    }
  </script>
  <script src="https://maps.googleapis.com/maps/api/js?key=<%= googleMapsApiKey %>&callback=initMap" async defer></script>

  <% } else { %>
  <p><em>Ubicación no disponible para este alojamiento.</em></p>
<% } %>
<script>
  function addOneDay(dateStr) {
    const d = new Date(dateStr);
    d.setDate(d.getDate() + 1);
    return d.toISOString().slice(0, 10);
  }
  document.addEventListener('DOMContentLoaded', function () {
    const calendarEl = document.getElementById('calendar');
    const calendarAvailability = JSON.parse('<%- JSON.stringify(availability) %>');
    const booked = JSON.parse('<%- JSON.stringify(bookedDates) %>');
    const calendar = new FullCalendar.Calendar(calendarEl, {
      initialView: 'dayGridMonth',
      selectable: false,
      events: [
        ...calendarAvailability.map(date => ({
          title: 'Disponible',
          start: date,
          display: 'background',
          color: '#d4edda'
        })),
        ...booked.map(b => ({
          title: 'Reservado',
          start: b.start,
          end: addOneDay(b.end), // Suma un día para que el rango sea inclusivo
          color: '#f8d7da',
          display:'background'
        }))
      ]
    });
    calendar.render();
  });
</script>
</body>
</html>
