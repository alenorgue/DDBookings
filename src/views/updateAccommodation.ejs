      transition: opacity 0.8s cubic-bezier(.4, 0, .2, 1), transform 0.8s cubic-bezier(.4, 0, .2, 1);
    }

    .fade-in.visible {
      opacity: 1;
      transform: none;
    }

    @media (max-width: 768px) {
      .card.translucent {
        padding: 1.2rem 0.5rem;
      }

      .main-content {
        padding-top: 2.5rem;
      }
    }
  </style>
</head>

