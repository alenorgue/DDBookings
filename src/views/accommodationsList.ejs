<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Alojamientos </title>
  <link rel="stylesheet" href="https://unpkg.com/@picocss/pico@2.0.6/css/pico.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
  <style>
    .accommodation-card {
      border: 1px solid #ccc;
      padding: 1rem;
      margin-bottom: 1.5rem;
      border-radius: 8px;
    }
    .amenities i {
      margin-right: 0.5rem;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar', { user: typeof user !== 'undefined' ? user : null }) %>
  <main class="container">
    <h1>Alojamientos</h1>
    <form method="GET" action="/accommodations" style="margin-bottom: 2rem;">
  <div style="display: flex; gap: 1rem; flex-wrap: wrap; align-items: flex-end;">
    <div>
      <label for="guests">Capacidad mínima</label>
      <input type="number" id="guests" name="guests" min="1" placeholder="Ej: 2" value="<%= query.guests || '' %>">
    </div>

    <div>
      <label for="maxPrice">Precio máximo/noche (€)</label>
      <input type="number" id="maxPrice" name="maxPrice" min="1" placeholder="Ej: 100" value="<%= query.maxPrice || '' %>">
    </div>

    <div>
      <label for="city">Ciudad</label>
      <input type="text" id="city" name="city" placeholder="Ej: Barcelona" value="<%= query.city || '' %>">
    </div>

    <div>
      <label for="checkIn">Fecha entrada</label>
      <input type="date" id="checkIn" name="checkIn" value="<%= query.checkIn || '' %>">
    </div>

    <div>
      <label for="checkOut">Fecha salida</label>
      <input type="date" id="checkOut" name="checkOut" value="<%= query.checkOut || '' %>">
    </div>

    <div>
      <button type="submit">Filtrar</button>
    </div>
    <div>
      <a href="/accommodations" class="button secondary">Limpiar filtros</a></div>
  </div>
</form>

 <% accommodations.forEach(acc => { %>
  <div class="accommodation-card" data-id="<%= acc.id %>">
    <h2><%= acc.title %></h2>
    <img src="<%= acc.mainPhoto %>" alt="Foto principal" style="max-width: 100%; height: auto;" />
    <p><strong>Precio por noche:</strong> <%= acc.pricePerNight %>€</p>
    <p><strong>Tamaño:</strong> <%= acc.squareMeters %> m²</p>
    <p><strong>Ciudad:</strong> <%= acc.location.city %> </p>
    
    <p><strong>Servicios:</strong></p>
    <div style="display: flex; flex-wrap: wrap; gap: 10px;">
      <% acc.amenities.forEach(a => { %>
        <% const icon = amenityIcons[a] || 'fa-circle-question'; %>
        <i class="fas <%= icon %>" title="<%= a %>" style="font-size: 1.3rem; color: #444;"></i>
      <% }) %>
    </div>
  </div>
<% }) %>
  </main>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.accommodation-card').forEach(card => {
      card.style.cursor = 'pointer';
      card.addEventListener('click', () => {
        const id = card.getAttribute('data-id');
        if (id) {
          window.location.href = `/accommodations/${id}`;
        }
      });
    });
  });
  </script>
</body>

</html>
